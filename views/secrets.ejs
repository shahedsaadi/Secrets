<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3 mb-4">You've Discovered The Secrets!</h1>
    <hr> 

    <% secrets.forEach(secret => { %>    <!-- iterates over the secrets array. -->
      <div class="secret-item">
        <p class="secret-text"><%= secret.secret %></p>

        <form action="/delete-secret" method="POST" class="delete-form">
          <input type="hidden" name="secretId" value="<%= secret.id %>">
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>

      </div>
      <hr>
    <% }) %>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
